  styleClass="main-pane">
  <children>
    <HBox alignment="BOTTOM_CENTER" layoutY="490.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="108.0"
      prefWidth="922.0" spacing="10" styleClass="side-panel">
