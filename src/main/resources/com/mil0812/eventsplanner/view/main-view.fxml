        <graphic>
          <ImageView fx:id="eventsButtonImage" />
        </graphic>
      </Button>
      <Button fx:id="dayListButton" styleClass="button-custom">
        <tooltip>
          <Tooltip text="ToDoList на сьогодні" />
        </tooltip>
        <graphic>
          <ImageView fx:id="dayListButtonImage" />
        </graphic>
      </Button>
      <Button fx:id="profileButton" styleClass="button-custom">
